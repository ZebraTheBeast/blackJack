@Scripts.Render("~/bundles/login")

<h2>Enter your name</h2>
@using (Html.BeginForm("Game", "Game", FormMethod.Post, new { id = "loginForm"}))
{
    <div class="alert alert-danger" id="nameError"><span>Input your name!</span></div>
    <div class="form-group">
        @Html.TextBox("playerName", null, new { id = "playerName", autocomplete = "off", @class = "form-control" })
    </div>

    <input type="submit" id="loginButton" value="Start new game" class="btn btn-default" />
    <input type="submit" id="loadButton" value="Load last game" class="btn btn-default" />
}